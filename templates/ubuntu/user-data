#cloud-config
hostname: {{ hostname }}
fqdn: {{ fqdn }}

manage_etc_hosts: False
ssh_pwauth: True
disable_root: False
#disable_root_opts:
chpasswd:
  list: |
     ops:Passw0rd!
     root:Passw0rd!
  expire: False

package_update: True
package_upgrade: True
packages:
  - qemu-guest-agent
  - open-vm-tools
  - net-tools
  - byobu
  - nload
  - multitail
  - tree

users:
  - default
  - name: ops
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    home: /home/ops
    shell: /bin/bash
    lock_passwd: False
    ssh-authorized-keys:
    - ssh-rsa  perreau@ibmlx
  - name: root
    lock_passwd: False
    ssh-authorized-keys:
    - ssh-rsa  perreau@ibmlx

# every boot
bootcmd:
  - [ sh, -c, "sgdisk -e -d3 -n3:0:0 -t3:8e00 /dev/vda" ]
  - [ sh, -c, partprobe ]
  - [ sh, -c, "pvresize /dev/vda3" ]

# run once for setup
runcmd:
  - echo "AllowUsers root ops" >> /etc/ssh/sshd_config
  - restart ssh
  - localectl set-keymap fr
  - touch /etc/cloud/cloud-init.disabled
#  - systemctl mask cloud-init-local cloud-init cloud-config cloud-final
#  - [ sh, -c, 'update-grub' ]

# reboot so grub config takes affect
#power_state:
#  mode: reboot

# written to /var/log/cloud-init-output.log
final_message: "FRED: The system is finall up, after $UPTIME seconds"
